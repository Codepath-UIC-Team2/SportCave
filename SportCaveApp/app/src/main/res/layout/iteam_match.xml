<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FBFBFB"
    android:outlineProvider="bounds">


    <TextView
        android:id="@+id/tvgoals1"
        android:layout_width="30dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="241dp"
        android:layout_toEndOf="@+id/ivteam1"
        android:fontFamily="sans-serif-black"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvname1"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivteam2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="258dp"
        android:fontFamily="sans-serif-black"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/ivteam1"
        android:layout_width="107dp"
        android:layout_height="96dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/basketball" />

    <ImageView
        android:id="@+id/ivteam2"
        android:layout_width="106dp"
        android:layout_height="92dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="295dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:srcCompat="@drawable/basketball" />

    <TextView
        android:id="@+id/tvgoals2"
        android:layout_width="29dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="143dp"
        android:fontFamily="sans-serif-black"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvname2"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivteam2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="sans-serif-thin"
        android:textColor="#101010"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="147dp"
        android:layout_marginEnd="72dp"
        android:layout_toStartOf="@+id/tvgoals2"
        android:layout_toEndOf="@+id/tvgoals1"
        android:text="VS"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp"
        android:fontFamily="sans-serif-black"
        android:text="VS"
        android:textSize="20sp" />

</RelativeLayout>